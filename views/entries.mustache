<html>
<head>
  {{>header}}
</head>
<body>
<h1>{{title}}</h1>
 <div class="mb-5">
   <h2 class="fs-4 fw-bold">View an author</h2>
     <form action="/searchPosts" method="POST">
        <fieldset>
         <div class="mb-3">
            <label class="form-label">Search by author name</label>
            <input class="form-control" type="text" id="empID" name="name" required>
          </div>
          <div class="mb-3">
             <button class="btn btn-primary" type="submit">Submit</button>
           </div>
          </fieldset>
        </form>
    </div>
{{#entries}}
<div class="card">
  <div class="card-body">
    <h4 class="card-title">{{subject}}</h4>
    <p class="card-text">
      {{contents}}
     </p>
<div class="card-footer">
  <p>Written by <a href="/posts/{{author}}">{{author}}</a> , on {{published}}</p>
</div>
</div>
{{/entries}}
<form action="/" method="GET">
        <fieldset>
          <div class="mb-3">
             <button class="btn btn-primary" type="submit">Show all</button>
           </div>
          </fieldset>
        </form>
{{^entries}}
  No entries yet.
{{/entries}}
</body>
</html>